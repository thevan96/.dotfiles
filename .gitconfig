[user]
  name = thevan96
  email = vothevan96@gmail.com

[core]
  editor = nvim
  excludesfile = /home/thevan96/.gitignore_global

[init]
  defaultBranch = main

[merge]
  tool = nvimdiff

[mergetool]
  keepBackup = false

[color]
  status = always

[alias]
  lg = log --all --decorate --oneline --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
