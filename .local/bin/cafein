#!/usr/bin/env bash

status=`xset -q | grep 'DPMS is' | awk '{ print $3 }'`
if [ $status == 'Enabled' ]; then
    xset -dpms
    if [[ $XDG_CURRENT_DESKTOP == 'i3' ]]; then
      dunstify 'Screen suspend is disabled'
    elif [[ $XDG_CURRENT_DESKTOP == 'ubuntu:GNOME' ]]; then
      notify-send 'Notification' 'Screen suspend is disabled'
    fi
else
    xset +dpms
    if [ $XDG_CURRENT_DESKTOP == 'i3' ]; then
      dunstify 'Screen suspend is enabled'
    elif [ $XDG_CURRENT_DESKTOP == 'ubuntu:GNOME' ]; then
      notify-send 'Notification' 'Screen suspend is enabled'
    fi
fi
