# Set mod key
set $mod Mod4
set $alt Mod1

# Font
font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Kill focused window
bindsym $mod+Shift+q kill

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split in horizontal orientation
bindsym $mod+v split h

# Split in vertical orientation
bindsym $mod+y split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Hide window title bar
default_border pixel 2
default_floating_border pixel 2

# Toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# Change focus between tiling / floating windows
bindsym $mod+t focus mode_toggle

# Terminal
bindsym $mod+Return exec alacritty

# Rofi replace dmenu
bindsym $mod+Shift+d exec --no-startup-id rofi -modi drun -show drun -show-icons
bindsym $mod+Shift+r exec --no-startup-id rofi -modi run -show run -show-icons

# Change container layout (stacked, tabbed, toggle split)
workspace_layout tabbed
bindsym $mod+w layout tabbed
bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split

# Define workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Next/previous workspace
bindsym $mod+Right workspace next
bindsym $mod+Left workspace prev

# Assign app
for_window [class="Alacritty"] move to workspace number $ws1
for_window [class="firefox"] move to workspace number $ws2
for_window [class="Google-chrome"] move to workspace number $ws2
for_window [class="Brave-browser"] move to workspace number $ws2
for_window [class="Evince"] move to workspace number $ws3
for_window [class="Nautilus"] move to workspace number $ws4

# Force floating window
for_window [class="Pavucontrol"] floating enable

# Reload the configuration file
bindsym $mod+Shift+c restart

# Set shut down, restart and locking features
set $mode_system (l)ock, (e)xit (s)uspend, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id i3lock-fancy, mode "default"
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec --no-startup-id systemctl suspend, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

# Resize window
mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Control volume, brightness
bindsym $mod+Control+h exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% && $refresh_i3status
bindsym $mod+Control+l exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% && $refresh_i3status
bindsym $mod+Control+j exec --no-startup-id light -U 1
bindsym $mod+Control+k exec --no-startup-id light -A 1

# Utils
bindsym Print exec --no-startup-id flameshot gui
bindsym $mod+Shift+o exec --no-startup-id fast_open
bindsym $mod+Shift+w exec --no-startup-id rofi -show window -show-icons
bindsym $mod+Shift+s exec --no-startup-id flameshot gui
bindsym $mod+Shift+p exec --no-startup-id gpick -p
bindsym $mod+Shift+x exec --no-startup-id i3lock-fancy
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock-fancy& --nofork

# Ibus switch engine
bindsym $mod+space exec --no-startup-id ibus engine xkb:us::eng
bindsym $mod+Shift+space exec --no-startup-id ibus engine Bamboo

# Scatchpad
bindsym $mod+n scratchpad show
bindsym $mod+Shift+n move scratchpad

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec \
  --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% \
  && $refresh_i3status
bindsym XF86AudioLowerVolume exec \
  --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% \
  && $refresh_i3status
bindsym XF86AudioMute exec \
  --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle \
  && $refresh_i3status
bindsym XF86AudioMicMute exec \
  --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle \
  && $refresh_i3status

# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 5
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 5

# Run startup
exec --no-startup-id ~/.config/i3/i3_startup

# Statusline
bar {
  position top
  status_command i3status
}
