general {
  colors = true
  interval = 5
}

order += "cpu_usage"
order += "memory"
# order += "wireless _first_"
# order += "ethernet _first_"
order += "volume master"
order += "battery all"
# order += "disk /"
order += "tztime local"

wireless _first_ {
  format_up = "W (%quality at %essid, %bitrate) %ip"
  format_down = "W down"
}

ethernet _first_ {
  format_up = "E %ip (%speed)"
  format_down = "E down"
}

cpu_usage {
  format = "CPU %usage"
}

memory {
  format = "MEM %used %percentage_used"
  threshold_degraded = "10%"
  format_degraded = "MEM %free"
}

volume master {
  format = "VOL %volume"
  format_muted = "VOL %volume muted"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

battery all {
  format = "%status %percentage"
  format_down = "No battery"
  status_chr = "âš¡"
  status_bat = "ðŸ”‹"
  status_unk = "?"
  status_full = ""
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

disk "/" {
  format = "%avail %percentage_used"
}

tztime local {
  format = "%a %Y/%m/%d %H:%M:%S"
}
