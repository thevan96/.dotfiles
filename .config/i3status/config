  format = "â™ª: %volume"
  format_muted = "â™ª: muted (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

battery 0 {
  format = "%status %percentage %remaining %emptytime"
  format_down = "No battery"
  status_chr = "âš¡CHR"
  status_bat = "ðŸ”‹ BAT"
  status_unk = "? UNK"
  status_full = "FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

tztime local {
  format = "%a %d/%m/%Y %H:%M"
}
